{
  "manifest_version": 3,
  "name": "Github â€” Unhappy Approve",
  "short_name": "github-unhappy-approve",
  "version": "0.1.5",
  "description": "Creates additional option for approve if your are not happy about the code",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "run_at": "document_end",
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
